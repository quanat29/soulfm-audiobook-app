<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    app:cardCornerRadius="10dp">

    <RelativeLayout
        android:layout_width="150dp"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_image_book_heard"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/image_book"
            android:scaleType="centerCrop"/>

        <SeekBar
            android:id="@+id/sb_book_heard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/iv_image_book_heard"
            android:progress="0"
            android:progressDrawable="@drawable/custom_seebar"
            android:layout_marginBottom="10dp"
            android:thumb="@drawable/custom_thumb_seekbar"
            android:max="100"/>


        <TextView
            android:id="@+id/tv_book_heard_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cha giàu cha nghèo"
            android:textColor="@color/black"
            android:padding="5dp"
            android:textAlignment="center"
            android:layout_below="@+id/iv_image_book_heard"/>
    </RelativeLayout>

</androidx.cardview.widget.CardView>